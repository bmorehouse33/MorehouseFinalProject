<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.morehousefinalproject.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainViewController</servlet-name>
        <servlet-class>com.morehousefinalproject.MainViewController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewBookingController</servlet-name>
        <servlet-class>com.morehousefinalproject.NewBookingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookingListController</servlet-name>
        <servlet-class>com.morehousefinalproject.BookingListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.morehousefinalproject.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainViewController</servlet-name>
        <url-pattern>/Main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewBookingController</servlet-name>
        <url-pattern>/NewBooking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingListController</servlet-name>
        <url-pattern>/BookingList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
